{
  "name": "typebundle",
  "version": "0.12.0",
  "description": "A personalized build process for Node.js projects using Babel-compiled TypeScript.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "source": "src/index.js",
  "bin": {
    "typebundle": "dist/cli.js"
  },
  "files": [
    "src",
    "dist",
    "types"
  ],
  "scripts": {
    "build": "npm run -s build:babel && npm run -s build:self",
    "build:babel": "node -r esbuild-register src/cli.ts \"src/{cli,index}.ts\" --output=dist --compress --types=types",
    "build:self": "node dist/cli.js \"src/{cli,index}.ts\" --output=dist --compress --types=types",
    "prerelease": "npm run build",
    "release": "np --no-yarn --no-tests",
    "test": "npm run build",
    "watch": "npm run build:babel -- --watch --no-compress"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rdmurphy/typebundle.git"
  },
  "keywords": [
    "bundle",
    "rollup",
    "libraries",
    "builder",
    "typescript"
  ],
  "author": "Ryan Murphy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rdmurphy/typebundle/issues"
  },
  "homepage": "https://github.com/rdmurphy/typebundle#readme",
  "dependencies": {
    "rollup": "^2.43.1",
    "rollup-plugin-terser": "^7.0.2"
  },
  "devDependencies": {
    "@newswire/prettier-config": "^3.0.0",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@types/mri": "^1.1.0",
    "@types/node": "^14.14.37",
    "builtin-modules": "^3.2.0",
    "esbuild": "0.11.0",
    "esbuild-register": "^2.3.0",
    "mri": "^1.1.6",
    "np": "^7.0.0",
    "prettier": "^2.0.2",
    "rollup-plugin-dts": "^3.0.1",
    "tiny-glob": "^0.2.8"
  },
  "peerDependencies": {
    "esbuild": "^0.11.0",
    "typescript": "^4.2.3"
  },
  "prettier": "@newswire/prettier-config"
}
