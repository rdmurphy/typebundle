{
  "name": "typebundle",
  "version": "0.7.0",
  "description": "A personalized build process for projects.",
  "main": "dist/index.js",
  "source": "src/index.js",
  "bin": {
    "typebundle": "dist/cli.js"
  },
  "files": [
    "src",
    "dist",
    "types"
  ],
  "scripts": {
    "build": "npm run -s build:babel && npm run -s build:self",
    "build:babel": "babel-node --extensions \".ts\" src/cli.ts \"src/{cli,index}.ts\" --target=10 --output=dist --compress --types=types",
    "build:self": "node dist/cli.js \"src/{cli,index}.ts\" --target=10 --output=dist --compress --types=types",
    "prerelease": "npm run build",
    "release": "np --no-yarn",
    "test": "echo \"Error: no test specified\" && exit 0",
    "watch": "npm run build:babel -- --watch --no-compress"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rdmurphy/typebundle.git"
  },
  "keywords": [
    "bundle",
    "rollup",
    "libraries",
    "builder",
    "typescript"
  ],
  "author": "Ryan Murphy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rdmurphy/typebundle/issues"
  },
  "homepage": "https://github.com/rdmurphy/typebundle#readme",
  "dependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-typescript": "^7.6.0",
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-json": "^4.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "builtin-modules": "^3.1.0",
    "fs-extra": "^8.1.0",
    "mri": "^1.1.4",
    "rollup": "^1.29.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-dts": "^1.2.1",
    "rollup-plugin-terser": "^5.1.2",
    "tiny-glob": "^0.2.6",
    "typescript": "^3.7.4"
  },
  "devDependencies": {
    "@babel/node": "^7.6.3",
    "@newswire/prettier-config": "^2.0.0",
    "@types/fs-extra": "^8.0.1",
    "@types/mri": "^1.1.0",
    "@types/node": "^13.5.0",
    "np": "^5.1.2",
    "prettier": "^1.18.2"
  },
  "prettier": "@newswire/prettier-config"
}
